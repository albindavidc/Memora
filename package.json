{
  "name": "memora",
  "productName": "Memora",
  "version": "1.0.0",
  "description": "A professional, glassmorphism-styled floating notes application.",
  "main": "dist-electron/main.js",
  "author": "Memora Team",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "compile:electron": "tsc -p electron/tsconfig.json",
    "electron:dev": "concurrently -k \"cross-env BROWSER=none npm run dev\" \"npm run compile:electron -- -w\" \"npx wait-on http://localhost:5173 && electron .\"",
    "electron:build": "npm run build && npm run compile:electron",
    "dist": "npm run electron:build && npx electron-builder",
    "dist:win": "npm run electron:build && npx electron-builder --win"
  },
  "dependencies": {
    "electron-log": "^5.1.1",
    "electron-updater": "^6.1.8",
    "lucide-react": "^0.344.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@fontsource/inter": "^5.2.8",
    "@types/node": "^20.19.27",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/semver": "^7.7.1",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^29.1.0",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.1.4"
  },
  "overrides": {
    "lucide-react": {
      "react": "$react",
      "react-dom": "$react-dom"
    }
  }
}
