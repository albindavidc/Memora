{
  "appId": "com.memora.app",
  "productName": "Memora",
  "directories": {
    "output": "dist",
    "buildResources": "assets"
  },
  "files": [
    "dist/**/*",
    "dist-electron/**/*"
  ],
  "publish": {
    "provider": "github",
    "owner": "YOUR_GITHUB_USER",
    "repo": "memora"
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ],
    "artifactName": "${productName}-Setup-${version}.${ext}"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "Memora"
  }
}